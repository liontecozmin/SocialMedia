@model Group
@{
    ViewData["Title"] = "LeaveGroup";
}

<p class="text-success">@ViewData["StatusMessage"]</p>


<dl class="dl-horizontal">

    <dt>Your Groups:</dt>
    <dd>
        <a asp-controller="Account" asp-action="ViewYourGroups" class="btn-bracketed">View Your Groups</a>
    </dd>


</dl>
<form asp-controller="Account" asp-action="LeaveGroup" method="post" class="form-horizontal">

    <hr />


    <div class="form-group">
        <label asp-for="group_name" class="col-md-2 control-label">Select the group name</label>
        <div class="col-md-10">
            <input asp-for="group_name" class="form-control" />

        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Leave</button>
        </div>
    </div>
</form>
